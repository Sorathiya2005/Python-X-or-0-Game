#: import utils kivy.utils

<Home>:
	
	FloatLayout:
		canvas.before:
			Rectangle:
				source: 'imgs/bg_img.png'
				size: self.size
				pos: self.pos
		Label:
			pos_hint: {"center_x":.5, "top":.95}
			text: "Welcome To [size=45sp][color=#FF0000FF]X-O[/color][/size]"
			markup: True
			size_hint: [.80, .1]
			font_size: '40sp'
			bold: True
			color: [1,1,1,1]
			canvas.before:
				Color:
					rgba: [0,0,0,1]
				Rectangle:
					size: self.width+35, self.height-5
					pos: self.x-17.5, self.y+2.5

		FloatLayout:
			# orientation: "vertical"
			# spacing: 10
			# padding: 10
			size_hint: [1, 0.8]
			pos_hint: {"top": .8}
			Button:
				id: btn1
				xx: -0.8
				background_normal: ""
				background_color: [0,0,0,0]
				color: [0,0,0,1]
				text: "solo-player".upper()
				size_hint_y: None
				bold: True
				italic: True
				font_size: "25sp"
				height: 50
				size_hint_x: .8
				pos_hint: {"top": .85, 'center_x':self.xx}
				on_release:
					app.change_screen('solo', 'up')
					app.execute_show_options("solo")
			Button:
				id: btn2
				xx: 1.8
				background_normal: ""
				background_color: [0,0,0,0]
				color: [0,0,0,1]
				text: "multi-player".upper()
				size_hint_y: None
				bold: True
				italic: True
				font_size: "25sp"
				height: 50
				size_hint_x: .8
				pos_hint: {"top": .65, 'center_x':self.xx}
				on_release:
					app.change_screen('poly', 'up')
					app.execute_show_options("poly")

